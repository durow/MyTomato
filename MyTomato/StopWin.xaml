<Window x:Class="MyTomato.StopWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyTomato"
        mc:Ignorable="d" SizeToContent="WidthAndHeight" WindowStyle="ToolWindow" WindowStartupLocation="CenterOwner"
        Title="放弃原因" Height="200" Width="250">
    <StackPanel>
        <TextBlock Text="放弃原因:" Margin="10,10,10,2"/>
        <TextBox x:Name="ReasonText" TextWrapping="Wrap" Width="200" Height="50" Margin="10,0,10,10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="确认放弃" Width="70" Height="25" Click="Button_Click"/>
            <Button Content="取消" Width="70" IsCancel="True" Click="Button_Click_1"/>
        </StackPanel>
    </StackPanel>
</Window>
